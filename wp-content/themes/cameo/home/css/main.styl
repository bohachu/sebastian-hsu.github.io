bg = #262118
gold = #AA8A49
white = #FFFFFF

bezier = cubic-bezier(0.68, 0, 0.265, 1)
transition(time=500ms)
	transition all time bezier

body#index-page
	font-family serif
	height 100%
	overflow hidden
	-webkit-tap-highlight-color rgba(255, 255, 255, 0)
	// & *
	// 	overflow hidden

text-shadow()
	text-shadow 1px 1px 2px rgba(150, 150, 150, 1)





@keyframes rotate
	from
		transform rotate(0deg)
	to
		transform rotate(360deg)

@keyframes dot1
	20%
		opacity 1
	40%
		opacity 1
	60%
		opacity 1
	70%
		opacity 1
	80%
		opacity 0
	100%
		opacity 0
@keyframes dot2
	20%
		opacity 0
	40%
		opacity 1
	60%
		opacity 1
	70%
		opacity 1
	80%
		opacity 0
	100%
		opacity 0
@keyframes dot3
	20%
		opacity 0
	40%
		opacity 0
	60%
		opacity 1
	70%
		opacity 1
	80%
		opacity 0
	100%
		opacity 0

#index-page
	background-color bg
	color white
	font-family serif
	letter-spacing 0.1em
	font-size 16px
	& *
		box-sizing border-box
		scroll-behavior smooth
		-webkit-overflow-scrolling touch
		&:active
			outline 0
	#loading
		position fixed
		top 0px
		left 0px
		width 100%
		height 100%
		background-color bg
		z-index 300
		display flex
		flex-direction column
		justify-content center
		align-items center
		.center
			display flex
			align-items flex-start
			img
				width 60px
				vertical-align top
				&.nine
					margin-right 0.3125em
				&.zero
					margin-right 1.875em
					animation-name rotate
					animation-duration 4000ms
					animation-iteration-count infinite
					animation-timing-function linear
			.text
				font-size 1.875em
				line-height 3em
				letter-spacing 0.15em
			.dot
				width 0.3125em
				height 0.3125em
				background-color white
				border-radius 50%
				margin-top 3.2em
				margin-left 0.3125em
				animation-duration 4000ms
				animation-iteration-count infinite
				animation-timing-function linear
				opacity 0
				&.one
					animation-name dot1
				&.two
					animation-name dot2
				&.three
					animation-name dot3
